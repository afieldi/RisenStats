{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
    ],
    "overrides": [
        {
            "files": ["**/*.{ts,tsx}"]
        }
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "object-curly-spacing": ["error", "always"],
        "quotes": ["error", "single"],
        "@typescript-eslint/semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"],
        "indent": ["error", 2]
    }
}
